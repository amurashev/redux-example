@import '../../main/styles/variables.styl'




.add-question-block
	position fixed
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 500;
	overflow: hidden;

	display flex
	justify-content center
	align-items: center
	flex-direction: column

	&.add-question-block--hidden
		display none;

	.question
		width 600px
		global-shadow()



		.question__text-block
			position relative
			background-color white

			.question__text
				background-color transparent
				border none
				border-radius: 0px;
				box-shadow none
				padding: 15px
				width: 100%;
				resize: none;
				height: 120px;
				margin-bottom: 0;
				placeholder-color(#dddddd)

		.question__images
			padding 10px 10px
			//background-color white-grey

			.question__image-block
				position relative
				display inline-block
				margin-right: 5px;

				img
					height: 100px
					border: 1px solid #BDBDBD;



		.question__add-photo
			color light-grey
			position absolute
			right 7px
			bottom 5px
			cursor pointer
			font-size 22px


		.question__delete-photo
			position: absolute;
			cursor pointer
			top: 0px;
			right: 0px;
			font-size: 1.9rem;
			color: white;
			background: rgba(51, 51, 51, 0.66);


		.question__panel-block
			padding 15px
			display flex
			flex-direction row
			align-items center
			colored()

			.question__category
				flex 1
				cursor pointer




		.question__add-answer
			color white
			i
				font-size 20px





		.answers
			margin-bottom: 0;

			.answer
				&:first-child
					box-shadow: 0 7px 13px -6px #ececec inset;

				border-bottom: 1px solid #e4e4e4;
				background-color #FBFBFB
				//global-shadow()

				.answer__text-block
					padding 5px 35px 10px 5px
					//border 1px solid #eeeeee
					position relative
					min-height: 6.5rem

					.answer__text
						font-size: 1.6rem;
						border none
						width 100%;
						float: none;
						box-shadow: none
						position relative
						height: 48px;
						background: inherit;
						placeholder-color(#cccccc)

					.answer__delete
						color light-grey
						position absolute
						cursor pointer
						right 5px
						top 5px

					.answer__delete-photo
						position: absolute;
						cursor pointer
						top: 0px;
						right: 0px;
						font-size: 1.9rem;
						color: white;
						background: rgba(51, 51, 51, 0.66);

					.answer__upload-image
						color light-grey
						position absolute
						right 7px
						bottom 5px
						cursor pointer
						font-size 22px

					.answer__images
						height auto
						padding: 0px 6px
						position relative

						.answer__image-block
							position relative
							display inline-block
							margin-right: 5px;
							margin-bottom: 5px;

							img
								height 55px








